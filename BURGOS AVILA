import os

def analizar_permisos(directorio):
    print(f"\nğŸ” Analizando permisos en la carpeta: {directorio}\n")

    try:
        for archivo in os.listdir(directorio):
            ruta = os.path.join(directorio, archivo)

            # Verificar permisos bÃ¡sicos
            puede_leer = os.access(ruta, os.R_OK)
            puede_escribir = os.access(ruta, os.W_OK)
            puede_ejecutar = os.access(ruta, os.X_OK)

            print(f"ğŸ“„ {archivo}")
            print(f"   Lectura: {'âœ”ï¸' if puede_leer else 'âŒ'}")
            print(f"   Escritura: {'âœ”ï¸' if puede_escribir else 'âŒ'}")
            print(f"   EjecuciÃ³n: {'âœ”ï¸' if puede_ejecutar else 'âŒ'}\n")

    except FileNotFoundError:
        print("âš ï¸ La carpeta no fue encontrada. Verifica la ruta.")

# Llama a la funciÃ³n con la carpeta test_dir
analizar_permisos(".")
